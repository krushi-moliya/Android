<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LinkActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        android:gravity="center"
        android:text="URL"
        android:fontFamily="serif"
        android:textColor="@color/purple_700"
        android:textSize="55dp"
        android:shadowColor="#5010DF"
        android:shadowDx="10"
        android:shadowDy="20"
        android:shadowRadius="50"
        android:background="#D3B6F8"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to google link\nwww.google.com"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginStart="100dp"
        android:layout_marginTop="80dp"
        android:textColor="@color/black"
        android:autoLink="web"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="80dp"
        android:autoLink="email"
        android:gravity="center"
        android:text="Click to mail\nkm@gmail.com"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="80dp"
        android:autoLink="phone"
        android:gravity="center"
        android:text="Click to call\n987456321"
        android:textColor="@color/black"
        android:textSize="25dp" />


</LinearLayout>